<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/Background"
    >
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingRight="10dp"
        android:id="@+id/History"
        android:hint="History"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="gravity"
        android:gravity="right"
        />
    <EditText
        android:paddingTop="10dp"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border"
        android:paddingRight="20dp"
        android:textAlignment="gravity"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:layout_below="@id/History"
        android:id="@+id/Answer"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <View

        android:id="@+id/line"
        android:layout_below="@id/Answer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent"/>
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/line"
        android:id="@+id/CE"
        android:text="CE"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/CE"
        android:layout_marginTop="15dp"
        android:layout_below="@id/line"
        android:id="@+id/C"
        android:text="C"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/C"
        android:layout_marginTop="15dp"
        android:layout_below="@id/line"
        android:id="@+id/percent"
        android:text="%"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/percent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/line"
        android:id="@+id/equals"
        android:text="="
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/CE"
        android:id="@+id/nine"
        android:text="9"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/nine"
        android:layout_below="@id/CE"
        android:id="@+id/eight"
        android:text="8"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/eight"
        android:layout_below="@id/CE"
        android:id="@+id/seven"
        android:text="7"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/seven"
        android:layout_below="@id/CE"
        android:id="@+id/divide"
        android:text="รท"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/nine"
        android:id="@+id/six"
        android:text="6"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/six"
        android:layout_below="@id/nine"
        android:id="@+id/five"
        android:text="5"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/five"
        android:layout_below="@id/nine"
        android:id="@+id/four"
        android:text="4"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/four"
        android:layout_below="@id/nine"
        android:id="@+id/multiply"
        android:text="x"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/six"
        android:id="@+id/three"
        android:text="3"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/three"
        android:layout_below="@id/six"
        android:id="@+id/two"
        android:text="2"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/two"
        android:layout_below="@id/six"
        android:id="@+id/one"
        android:text="1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/one"
        android:layout_below="@id/six"
        android:id="@+id/plus"
        android:text="+"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/two"
        android:layout_toRightOf="@id/three"
        android:id="@+id/zero"
        android:text="0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/two"
        android:layout_below="@id/one"
        android:id="@+id/dot"
        android:text="."
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/one"
        android:layout_below="@id/plus"
        android:id="@+id/minus"
        android:text="-"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_below="@id/zero"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/footer"
        />


</RelativeLayout>